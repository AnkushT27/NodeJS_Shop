<%- include('../shared/head.ejs') %> 
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
<%- include('../shared/nav.ejs') %>  
    <main>
        <form class="product-form" action="/admin/<% if(edit) {%>edit-product?_csrf=<%=csrftoken%><%} else{ %>product?_csrf=<%=csrftoken%><% } %>" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= csrftoken%>"/>
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if(edit) {%><%= product.title%><%}%>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="text" name="price" id="price" value="<% if(edit) {%><%= product.price%><%}%>">
            </div>
            <div class="form-control">
                <label for="url">Image URL</label>
                <input type="file" name="image" id="image">
            </div>
            <div class="form-control">
                <label for="desc">Description</label>
                <textarea  name="desc" id="desc" ><% if(edit) {%><%= product.description %><%}%></textarea>
                <input type="hidden" name="id" id="id" value="<% if(edit) {%><%= product._id%><%}%>">
            </div>
        <button type="submit"><% if(edit) {%>Update Product<%}else{%>Add Product<%}%></button>
        </form>
    </main>
    <%- include('../shared/end.ejs') %>  